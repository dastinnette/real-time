<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/css/materialize.min.css'>
    <meta charset="utf-8">
    <title>crowdsource</title>
  </head>
  <body>

    <div class="container">
      <h1>
        <a href="https://www.youtube.com/watch?v=pWdd6_ZxX8c" target="_blank">
          Yeah, well, that's just, like, your opinion, man
        </a>
      </h1>
      <hr>

      <div id="poll-report-status">
        <br>
        <% if (closed) { %>
          <h4>This poll is closed</h4>
        <% } else { %>
            <h4><%= question %></h4>
            <br>
            <div id="poll">
              <% options.forEach(function(option){ %>
                <button><%= option %></button><br><br>
              <% }); %>
            </div>
            <div id="selection"></div>
        <% } %>
      </div>

      <div class="poll-results">
        <% if (share === 'on') { %>
        <h4>Poll results</h4>
        <h5><%= question %></h5>
        <div id="results">
          <% for (var option in results){ %>
            <p><%= option %>: <%= results[option]%></p>
          <% } %>
        </div>
        <% } %>
      </div>

      <div id="connection-count"></div>
    </div>

    <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/client.js"></script>
  </body>
</html>
